<!-- Page Header-->
<div class="page-header no-margin-bottom">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Charts</h2>
    </div>
</div>
<section style="padding-top: 30px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="block">
                    <div class="title">
                        <strong>Player statistics</strong>
                    </div>
                    <div class="block-body">
                        <!--suppress HtmlUnknownTarget -->
                        <form action="tee" method="get">
                            <div class="form-group">
                                <label class="form-control-label">Tee name</label>
                                {% if missingTee %}
                                    <input name="n" id="tee_name" placeholder="Tee name"
                                           class="form-control is-invalid" type="text">
                                    <div class="invalid-feedback">This player does not exist
                                        {% if suggestionsTee %}
                                            , try one of the following :
                                            <ul class="list-group">
                                                {% for url,name in suggestionsTee %}
                                                    <li class="list-group-item list-group-item-transparent">
                                                        <a href="{{ url }}">{{ name }}</a>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </div>
                                {% else %}
                                    <input name="n" id="tee_name" placeholder="Tee name"
                                           class="mr-sm-3 form-control" type="text">
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <input value="Submit" class="btn btn-primary" type="submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
